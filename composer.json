{
  "name": "marvin255/in-memory-cache",
  "type": "library",
  "description": "Array based cache for PHP.",
  "keywords": ["php", "cache"],
  "license": "MIT",
  "require": {
    "php": ">=7.4",
    "psr/simple-cache": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "friendsofphp/php-cs-fixer": "^2.11|^3.0",
    "sebastian/phpcpd": "^6.0",
    "vimeo/psalm": "^4.0",
    "psalm/plugin-phpunit": "^0.15"
  },
  "autoload": {
    "psr-4": {
      "Marvin255\\InMemoryCache\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Marvin255\\InMemoryCache\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --configuration phpunit.xml.dist",
    "coverage": "vendor/bin/phpunit --configuration phpunit.xml.dist --coverage-html=tests/coverage",
    "fixer": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php -v --allow-risky=yes",
    "linter": [
        "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php -v --dry-run --stop-on-violation --allow-risky=yes",
        "vendor/bin/phpcpd ./ --exclude vendor --exclude docker",
        "vendor/bin/psalm --show-info=true"
    ]
  }
}
